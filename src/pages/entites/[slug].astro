---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';
import { getCollection } from 'astro:content';
import EgoGraph from '../../components/EgoGraph.astro';
import { getGraphDisplayData } from '../../lib/genealogie';
import fs from 'node:fs';
import path from 'node:path';
import { fileURLToPath } from 'node:url';

export async function getStaticPaths() {
  const all = await getCollection('entites');
  return all.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { title, description, image, role, parents, domaines, symboles, gender } = entry.data;
const { Content } = await entry.render();
const genealogie = getGraphDisplayData(entry.slug);

// Resolve project root from this file (/src/pages/entites/[slug].astro -> up 3 levels)
const projectRoot = fileURLToPath(new URL('../../..', import.meta.url));
const publicDir = path.join(projectRoot, 'public');

const videoSrc =
  ensurePublicPath(entry.data.video) ??
  findFirstExisting(`videos/${entry.slug}`, ['mp4', 'webm', 'ogg', 'ogv']);
const videoType = videoSrc ? getMimeFromExt(videoSrc) : null;

const imageSrc =
  ensurePublicPath(image) ??
  findFirstExisting(`images/${entry.slug}`, ['webp', 'jpg', 'jpeg', 'png']) ??
  findFallbackUnknown(gender);

function findFirstExisting(baseWithoutExt: string, extensions: string[]): string | null {
  // try exact casing first
  for (const ext of extensions) {
    const rel = baseWithoutExt.includes('.') ? baseWithoutExt : `${baseWithoutExt}.${ext}`;
    const relPath = rel.startsWith('/') ? rel.slice(1) : rel;
    const full = path.join(publicDir, relPath);
    if (fs.existsSync(full)) {
      return '/' + relPath.replace(/\\/g, '/');
    }
  }
  // fallback: case-insensitive scan in the target directory
  const dir = path.dirname(baseWithoutExt);
  const baseName = path.basename(baseWithoutExt).toLowerCase();
  const dirPath = path.join(publicDir, dir.startsWith('/') ? dir.slice(1) : dir);
  if (!fs.existsSync(dirPath)) return null;
  const candidates = fs.readdirSync(dirPath);
  const match = candidates.find((file) => {
    const lowered = file.toLowerCase();
    return extensions.some((ext) => lowered === `${baseName}.${ext}`);
  });
  if (match) {
    const rel = path.join(dir, match);
    const relPath = rel.startsWith('/') ? rel.slice(1) : rel;
    return '/' + relPath.replace(/\\/g, '/');
  }
  return null;
}

function findFallbackUnknown(gender?: string): string | null {
  const normalized = gender?.toString().toLowerCase();
  const byGender: Record<string, string> = {
    m: 'images/unknown_m.webp',
    male: 'images/unknown_m.webp',
    masculin: 'images/unknown_m.webp',
    f: 'images/unknown_f.webp',
    femelle: 'images/unknown_f.webp',
    fem: 'images/unknown_f.webp',
    female: 'images/unknown_f.webp',
    feminin: 'images/unknown_f.webp',
    autre: 'images/unknown_x.webp',
    other: 'images/unknown_x.webp',
    x: 'images/unknown_x.webp',
  };
  const prioritized: string[] = [];
  if (normalized && byGender[normalized]) {
    prioritized.push(byGender[normalized]);
  }
  const candidates = [...prioritized, 'images/unknown_m.webp', 'images/unknown_f.webp', 'images/unknown_x.webp'];
  for (const rel of candidates) {
    const full = path.join(publicDir, rel);
    if (fs.existsSync(full)) {
      return '/' + rel;
    }
  }
  return null;
}

function getMimeFromExt(filePath: string): string | null {
  const ext = filePath.split('.').pop()?.toLowerCase();
  if (!ext) return null;
  switch (ext) {
    case 'mp4':
      return 'video/mp4';
    case 'webm':
      return 'video/webm';
    case 'ogg':
    case 'ogv':
      return 'video/ogg';
    default:
      return null;
  }
}

function ensurePublicPath(relPath: string | undefined): string | null {
  if (!relPath) return null;
  const cleaned = relPath.startsWith('/') ? relPath.slice(1) : relPath;
  const full = path.join(publicDir, cleaned);
  if (fs.existsSync(full)) {
    return '/' + cleaned.replace(/\\/g, '/');
  }
  return null;
}
---

<html lang="fr">
<head>
  <meta charset="utf-8" />
  <title>{title} | Mythoskolis</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">
  <Header />

  <main class="flex-1 max-w-4xl mx-auto px-4 py-12">
    <div class="flex flex-wrap gap-3 text-sm mb-4">
      <a href="/entites/" class="underline">← Toutes les entités</a>
      <a href={`/genealogie/${entry.slug}/`} class="underline text-indigo-600 hover:text-indigo-700">
        Voir la généalogie
      </a>
    </div>

    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    {role && <p class="text-xl text-gray-600 mb-6">{role}</p>}

    {videoSrc ? (
      <video 
        class="w-full md:w-[70%] mx-auto rounded-2xl mb-8 shadow"
        autoplay 
        muted 
        loop
        playsinline
        controlsList="nodownload nofullscreen noplaybackrate"
        disablePictureInPicture
        oncontextmenu="event.preventDefault()"
      >
        <source src={videoSrc} type={videoType ?? undefined} />
        Votre navigateur ne supporte pas la vidéo HTML5.
      </video>
    ) : (
      imageSrc && (
        <img 
          src={imageSrc} 
          alt={title} 
          class="w-full md:w-[70%] mx-auto rounded-2xl mb-8 shadow"
        />
      )
    )}


    <section class="prose prose-gray max-w-none mt-8">
      <Content />
    </section>

    <div class="mt-10 grid grid-cols-1 sm:grid-cols-3 gap-6 text-sm">
      {parents && (
        <div>
          <h3 class="font-semibold mb-2">Parents</h3>
          <ul class="list-disc ml-4">
            {parents.map((p) => <li>{p}</li>)}
          </ul>
        </div>
      )}

      {domaines && (
        <div>
          <h3 class="font-semibold mb-2">Domaines</h3>
          <ul class="list-disc ml-4">
            {domaines.map((d) => <li>{d}</li>)}
          </ul>
        </div>
      )}

      {symboles && (
        <div>
          <h3 class="font-semibold mb-2">Symboles</h3>
          <ul class="list-disc ml-4">
            {symboles.map((s) => <li>{s}</li>)}
          </ul>
        </div>
      )}
    </div>

    {genealogie ? (
      <section class="mt-12 space-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-semibold">Généalogie détaillée</h2>
          <a href={`/genealogie/${entry.slug}/`} class="text-sm text-indigo-600 hover:text-indigo-700 underline">
            Ouvrir la page dédiée
          </a>
        </div>
        <EgoGraph {...genealogie} />
      </section>
    ) : (
      <section class="mt-12 rounded-2xl border border-dashed border-indigo-200 bg-white p-6 text-sm text-gray-700 space-y-3">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-semibold">Généalogie en préparation</h2>
          <a href={`/genealogie/${entry.slug}/`} class="text-sm text-indigo-600 hover:text-indigo-700 underline">
            Page de suivi
          </a>
        </div>
        <p>
          Les liens familiaux de {title} sont en train d’être documentés (sources antiques, variantes, etc.).
          La section sera active dès que la fiche sera complète.
        </p>
      </section>
    )}
  </main>

  <Footer />
</body>
</html>
