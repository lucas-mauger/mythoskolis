---
interface Props {
  initialSlug: string;
}

const { initialSlug } = Astro.props as Props;
const componentId = `ego-graph-${initialSlug}`;
const clientModule = (await import('./ego-graph-interactive-client.ts?url')) as { default: string };
const clientScriptSrc = clientModule.default;
---

<section class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6 space-y-4">
  <div class="relative border border-dashed border-indigo-100 rounded-2xl bg-indigo-50/50 overflow-hidden">
    <div
      id={componentId}
      class="ego-graph-sky relative overflow-y-auto"
      aria-live="polite"
      data-ego-graph
      data-initial-slug={initialSlug}
    >
      <div class="ego-column" data-column="parents" aria-hidden="true"></div>
      <div class="ego-column" data-column="siblings" aria-hidden="true"></div>
      <div class="ego-column" data-column="consorts" aria-hidden="true"></div>
      <div class="ego-column" data-column="children" aria-hidden="true"></div>
      <div class="ego-column-labels" aria-hidden="true">
        <span>Parents</span>
        <span>Fratrie</span>
        <span>Consorts</span>
        <span>Enfants</span>
      </div>
      <div class="ego-graph-message">Chargement du grapheâ€¦</div>
    </div>
  </div>
  <p class="text-sm text-gray-500 text-center">
    Clique sur un parent, un enfant ou un consort pour recentrer le graphe sans recharger la page.
  </p>
</section>

<style is:global>
  .ego-graph-sky {
    height: 82vh;
    max-height: 900px;
    min-height: 620px;
    padding: 0 1.5rem;
    overscroll-behavior: contain;
    touch-action: pan-y;
    cursor: grab;
    scrollbar-width: none;
    position: relative;
  }
  .ego-graph-sky::-webkit-scrollbar {
    display: none;
  }

  .ego-graph-sky::before,
  .ego-graph-sky::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    height: 800px;
    background: transparent;
    pointer-events: none;
  }

  .ego-graph-sky::before {
    top: -800px;
  }

  .ego-graph-sky::after {
    bottom: -800px;
  }

  .ego-graph-sky.is-dragging {
    cursor: grabbing;
  }

  .ego-column {
    position: absolute;
    top: 0;
    left: 0;
    width: 22%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .ego-column::before {
    content: "";
    position: absolute;
    top: -2000px;
    bottom: -2000px;
    width: 70%;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 9999px;
    background: rgba(255, 255, 255, 0.65);
    border: 1px dashed rgba(129, 140, 248, 0.4);
  }

  .ego-column {
    transform: translateX(-50%);
  }

  .ego-column[data-column="parents"] {
    left: 18%;
  }
  .ego-column[data-column="siblings"] {
    left: 38%;
  }
  .ego-column[data-column="consorts"] {
    left: 62%;
  }
  .ego-column[data-column="children"] {
    left: 82%;
  }

  .ego-link {
    stroke: rgba(99, 102, 241, 0.4);
  }

  .ego-node {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 90px;
    height: 90px;
    transition: transform 250ms ease-out, opacity 200ms ease-out;
    opacity: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ego-node button {
    transition: box-shadow 150ms ease, border-color 150ms ease, transform 150ms ease;
    background-color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius: 9999px;
    padding: 0.75rem;
    box-shadow: 0 1px 2px rgba(15, 23, 42, 0.08);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    flex-shrink: 0;
    position: relative;
    z-index: 2;
  }

  .ego-node[data-role="central"] button {
    border-color: rgb(129 140 248);
    box-shadow: 0 10px 15px rgba(99, 102, 241, 0.15);
    font-weight: 600;
    color: rgb(17 24 39);
  }

  .ego-node[data-role="central"] {
    width: 150px;
    height: 150px;
    gap: 0.4rem;
    z-index: 4;
    margin-top: 1rem;
  }

  .ego-node[data-role="central"] button:focus-visible {
    outline: 2px solid rgb(129 140 248);
    outline-offset: 2px;
  }

  .ego-node button:hover {
    border-color: rgb(165 180 252);
    box-shadow: 0 15px 20px rgba(99, 102, 241, 0.2);
  }

  .ego-node button:focus-visible {
    outline: 2px solid rgb(129 140 248);
    outline-offset: 2px;
  }

  .ego-node-role {
    display: none;
  }

  .ego-node-label {
    margin-top: -0.4rem;
    background: rgba(255, 255, 255, 0.92);
    border: 1px solid rgba(79, 70, 229, 0.2);
    border-radius: 9999px;
    padding: 0.3rem 0.9rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: rgb(17 24 39);
    box-shadow: 0 2px 6px rgba(15, 23, 42, 0.12);
    text-transform: none;
    letter-spacing: normal;
    pointer-events: none;
  }

  .ego-node[data-role="central"] .ego-node-label {
    margin-top: 0;
  }

  .ego-node-role {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgb(79 70 229);
    display: block;
    margin-bottom: 0.2rem;
  }

  .ego-node-variant {
    font-size: 0.75rem;
    color: rgb(107 114 128);
    margin-top: 0.25rem;
  }

  .ego-node-sources {
    font-size: 0.7rem;
    color: rgb(156 163 175);
    margin-top: 0.4rem;
  }

  .ego-node.is-visible {
    opacity: 1;
  }

  .ego-node.is-leaving {
    opacity: 0;
  }

  .ego-graph-message {
    min-height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    color: rgb(75 85 99);
    text-align: center;
    padding: 1.25rem;
    position: sticky;
    top: 0;
    z-index: 3;
  }

  @media (max-width: 640px) {
    .ego-graph-sky {
      height: 90vh;
      max-height: none;
      min-height: 90vh;
      padding: 0 1rem;
    }

    .ego-graph-sky::before,
    .ego-graph-sky::after {
      height: 600px;
    }

    .ego-column {
      width: 28%;
    }
    .ego-column[data-column="parents"] {
      left: 24%;
    }
    .ego-column[data-column="siblings"] {
      left: 42%;
    }
    .ego-column[data-column="consorts"] {
      left: 58%;
    }
    .ego-column[data-column="children"] {
      left: 76%;
    }

    .ego-node {
      width: 78px;
      height: 78px;
    }

    .ego-node[data-role="central"] {
      width: 130px;
      height: 130px;
    }

    .ego-node-label {
      font-size: 0.8rem;
    }
  }

  .ego-column-labels {
    position: sticky;
    top: 0;
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 2rem;
    padding: 1rem 2rem 0.5rem;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgb(79 70 229);
    z-index: 5;
    background: linear-gradient(180deg, rgba(248, 250, 252, 0.95), rgba(248, 250, 252, 0));
  }
</style>

<script type="module" src={clientScriptSrc}></script>
